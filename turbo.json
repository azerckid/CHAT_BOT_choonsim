{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**",
                ".react-router/**",
                "dist/**"
            ],
            "env": [
                "VITE_*",
                "NODE_ENV",
                "TURSO_DATABASE_URL",
                "TURSO_AUTH_TOKEN",
                "SESSION_SECRET",
                "BETTER_AUTH_SECRET",
                "BETTER_AUTH_URL",
                "GOOGLE_CLIENT_ID",
                "GOOGLE_CLIENT_SECRET",
                "GOOGLE_REDIRECT_URL",
                "KAKAO_CLIENT_ID",
                "KAKAO_CLIENT_SECRET",
                "KAKAO_REDIRECT_URL",
                "TWITTER_CLIENT_ID",
                "TWITTER_CLIENT_SECRET",
                "TWITTER_REDIRECT_URL",
                "GEMINI_API_KEY",
                "OPENAI_API_KEY",
                "LANGSMITH_API_KEY",
                "SERPER_API_KEY",
                "FIRECRAWL_API_KEY",
                "TAVILY_API_KEY",
                "VECTOR_STORE_ID",
                "CLOUDINARY_CLOUD_NAME",
                "CLOUDINARY_API_KEY",
                "CLOUDINARY_API_SECRET",
                "PUSHER_APP_ID",
                "PUSHER_KEY",
                "PUSHER_SECRET",
                "PUSHER_CLUSTER",
                "VAPID_PUBLIC_KEY",
                "VAPID_PRIVATE_KEY",
                "PAYPAL_CLIENT_ID",
                "PAYPAL_CLIENT_SECRET",
                "PAYPAL_MODE",
                "TOSS_CLIENT_KEY",
                "TOSS_SECRET_KEY",
                "COINBASE_COMMERCE_API_KEY",
                "COINBASE_COMMERCE_WEBHOOK_SECRET",
                "ENCRYPTION_KEY",
                "BONDBASE_API_URL",
                "CHOONSIM_API_KEY",
                "OPENWEATHER_API_KEY",
                "AMADEUS_CLIENT_ID",
                "AMADEUS_CLIENT_SECRET"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        }
    }
}